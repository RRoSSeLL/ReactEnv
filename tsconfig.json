{ 
  "include": ["./src/**/*"],
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "paths": {
      "root/*": ["*"],
      "src/*": ["./src/*"],
      "assets/*": ["./assets/*"],
      "components/*": ["./src/components/*"]
    }
  },
  "exclude": ["dist"],
}